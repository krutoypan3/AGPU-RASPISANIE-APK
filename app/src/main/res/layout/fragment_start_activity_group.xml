<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_activity_start_layout"
    android:background="@drawable/background_light">

    <!-- Добро пожаловать -->
    <TextView
        android:id="@+id/main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginStart="12dp"
        android:text="@string/Your_group"
        android:textAppearance="@style/text_h2_style"
        android:lineSpacingExtra="9sp"
        android:gravity="center_horizontal|top"
        />

    <!-- Давайте сначала определим, кто вы -->
    <TextView
        android:id="@+id/second_text"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_text"
        android:layout_margin="30dp"
        android:lineSpacingExtra="4sp"
        android:text="@string/Do_you_know_group"
        android:textAppearance="@style/text_style"
        android:translationY="-2.25sp" />

    <!-- Buttons -->
    <RelativeLayout
        android:id="@+id/I_know_group_name_btn"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_below="@id/second_text"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_blue"
        android:padding="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:textColor="@color/gold"
            android:text="@string/I_know_group_name"
            android:textAppearance="@style/text_style_caps"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/I_know_the_direction_of_training_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:padding="20dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_blue"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/I_know_group_name_btn">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gold"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/text_style_caps"
            android:text="@string/I_know_the_direction_of_training"
            />
    </RelativeLayout>

</RelativeLayout>