<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MyApp.Main"
    android:background="@drawable/widget_background_light"
    android:padding="5dp"> <!--theme я хз зачем указывать, но без него ОНО НЕ ХОЧЕТ-->
    <TextView
        android:id="@+id/tvUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/widget_maintext_background_light"
        android:text="@string/app_name"
        android:textColor="@color/widget_text_color_light"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_centerHorizontal="true">
    </TextView>
    <TextView
        android:id="@+id/tvUpdate_time"
        android:textSize="16sp"
        android:text="@string/dusha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvUpdate"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/widget_subtext_background_light"
        android:textColor="@color/widget_secondary_text_color_light"
        android:layout_centerHorizontal="true">
    </TextView>
    <TextView
        android:id="@+id/tvUpdate_time2"
        android:textSize="16sp"
        android:text="@string/widget_preview_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvUpdate_time"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/widget_subtext_background_light"
        android:textColor="@color/widget_text_color_light"
        android:layout_centerHorizontal="true">
    </TextView>
</RelativeLayout>