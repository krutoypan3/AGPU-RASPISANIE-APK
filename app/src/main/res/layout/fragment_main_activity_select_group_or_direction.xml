<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Добро пожаловать -->
    <TextView
        android:id="@+id/main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:text="@string/How_do_you_want_to_find_your_schedule"
        android:textAppearance="@style/text_h3_style"
        android:lineSpacingExtra="9sp"
        />

    <!-- Buttons -->
    <RelativeLayout
        android:id="@+id/fac_btn"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_below="@id/main_text"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_blue"
        android:padding="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:textColor="@color/gold"
            android:text="@string/Select_from_the_list_of_faculties"
            android:textAppearance="@style/text_style_caps"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/dir_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:padding="20dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_blue"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fac_btn">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gold"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/text_style_caps"
            android:text="@string/Find_by_directions_of_training"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/grp_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:padding="20dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_blue"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dir_btn">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gold"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/text_style_caps"
            android:text="@string/Find_by_group_name"
            />
    </RelativeLayout>

</RelativeLayout>