<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:text="@string/logo"
        android:textAlignment="center"
        android:textColor="@color/shelk"
        android:textColorHighlight="#000000"
        android:textColorHint="#C89595"
        android:textColorLink="#FF6565"
        android:textSize="24sp" />
    <Spinner
        android:id="@+id/vibor_rezhima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="50dp"
        android:textSize="24sp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_marginTop="-20sp"
        android:layout_below="@id/logow"
        android:textColor="@color/arkt_iva"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>

    <EditText
        android:theme="@style/Theme.MyApp.Main"
        android:id="@+id/rasp_search_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:ems="10"
        android:textColor="@color/shelk"
        android:textColorHint="@color/arkt_iva"
        android:inputType="textPersonName"
        android:layout_below="@id/logow"
        android:textAlignment="center"
        android:hint="Введите название группы" />

    <Button
        android:theme="@style/Theme.MyApp.Main"
        android:background="@drawable/button"
        android:id="@+id/main_button"
        android:layout_width="match_parent"
        android:textColor="@color/shelk"
        android:layout_marginTop="20sp"
        android:layout_marginHorizontal="50sp"
        android:layout_below="@id/rasp_search_edit"
        android:layout_height="wrap_content"
        android:text="Найти расписание" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:layout_below="@id/main_button"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#000000"
        android:textColorHint="#C89595"
        android:textColorLink="#FF6565"
        android:textSize="24sp" />
o9
    <ListView
        android:layout_marginTop="5sp"
        android:textSize="24sp"
        android:theme="@style/Theme.Design.Light"
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </ListView>
    <ListView
        android:layout_marginTop="-135sp"
        android:visibility="invisible"
        android:textSize="24sp"
        android:theme="@style/Theme.Design.Light"
        android:id="@+id/listview_aud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_button"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </ListView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/GitHub"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/git" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/favorite_card"
        android:background="@drawable/refresh_1"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/favorite"
            android:layout_width="49dp"
            android:layout_height="50dp"
            android:background="@color/arkt_iva"
            android:src="@drawable/ic_baseline_stars_24" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/delete_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/refresh_0"
        android:src="@drawable/ic_baseline_delete_forever_24"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:theme="@style/Theme.MyApp.Main" />
</RelativeLayout>