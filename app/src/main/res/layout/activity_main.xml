<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MyApp.Main"
    android:background="@drawable/snow"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:transitionName="actionBar" />

    <TextView
        android:id="@+id/logow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:textAlignment="center"
        android:textColorHighlight="#000000"
        android:textColorHint="#C89595"
        android:textColorLink="#FF6565"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_marginTop="-20sp"
        android:layout_below="@id/logow"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>

    <EditText
        android:theme="@style/Theme.MyApp.Main"
        android:id="@+id/rasp_search_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:ems="10"
        android:textColorHint="@color/arkt_iva"
        android:inputType="textPersonName"
        android:layout_below="@id/logow"
        android:textAlignment="center"
        android:hint="Введите название группы" />

    <Button
        android:background="@drawable/button"
        android:id="@+id/main_button"
        android:layout_width="match_parent"
        android:layout_marginTop="20sp"
        android:layout_marginHorizontal="50sp"
        android:layout_below="@id/rasp_search_edit"
        android:layout_height="wrap_content"
        android:text="Найти расписание" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:layout_below="@id/main_button"
        android:textAlignment="center"
        android:textColorHighlight="#000000"
        android:textColorHint="#C89595"
        android:textColorLink="#FF6565"
        android:textSize="24sp" />
    <ListView
        android:layout_marginTop="5sp"
        android:textSize="24sp"
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </ListView>

    <ListView
        android:id="@+id/listview_aud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_button"
        android:layout_marginTop="-135sp"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ListView>

</RelativeLayout>