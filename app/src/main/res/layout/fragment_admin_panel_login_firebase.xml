<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_admin_panel"
    android:background="@drawable/background_light">

    <!-- Добро пожаловать -->
    <TextView
        android:id="@+id/main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:text="@string/Log_in_to_the_Admin_panel"
        android:textAppearance="@style/text_h2_style"
        android:lineSpacingExtra="9sp"
        android:gravity="center_horizontal|top"
        />
    <TextView
        android:id="@+id/second_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_text"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/error"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="4sp"
        android:textAppearance="@style/text_style"
        android:translationY="-2.25sp" />
    <RelativeLayout
        android:id="@+id/Login_firebase_layout"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_below="@id/second_text"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_blue_invert"
        android:padding="10dp">
        <EditText
            android:id="@+id/Login_firebase"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:layout_height="wrap_content"
            android:hint="@string/Login"
            android:backgroundTint="@android:color/transparent"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Password_firebase_layout"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_below="@id/Login_firebase_layout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_blue_invert"
        android:padding="10dp">
        <EditText
            android:id="@+id/Password_firebase"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="@string/Password"
            android:backgroundTint="@android:color/transparent"
            />
    </RelativeLayout>

    <!-- Buttons -->
    <RelativeLayout
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Password_firebase_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_blue"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/Continue"
            android:textAppearance="@style/text_style_caps"
            android:textColor="@color/gold" />
    </RelativeLayout>

</RelativeLayout>